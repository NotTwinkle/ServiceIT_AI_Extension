{
  "manifest_version": 3,
  "name": "Service IT Plus Assistant",
  "version": "1.0.0",
  "description": "AI-powered assistant for Ivanti Service Manager",
  "permissions": ["scripting", "activeTab", "cookies", "storage", "unlimitedStorage"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": [
    "https://success.serviceitplus.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://api.x.ai/*",
    "http://localhost:11434/*",
    "http://192.168.2.155:11434/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://success.serviceitplus.com/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "all_frames": false,
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "content.js", 
        "content.css",
        "inject.js",
        "brute-force-scanner.js",
        "icons/*"
      ],
      "matches": ["https://success.serviceitplus.com/*"]
    }
  ]
}
